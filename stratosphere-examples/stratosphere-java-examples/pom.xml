								</manifestEntries>
							</archive>

							<includes>
								<include>**/kmeans/KMeansSingleStep.class</include>
								<include>**/kmeans/KMeansSingleStep$*.class</include>
								<include>**/kmeans/KMeansSampleDataGenerator.class</include>
								<include>**/kmeans/udfs/*.class</include>
							</includes>
						</configuration>
					</execution>
					
